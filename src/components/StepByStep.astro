---
import Image from "astro/components/Image.astro";
import VectorBg from "../assets/VectorBg.svg";

const processSteps = [
  {
    number: 1,
    title: "Formulaire sur mesure",
    paragraph:
      "Faites l'expérience d'une création rapide avec des formulaires qui s'adaptent à vos besoins.",
  },
  {
    number: 2,
    title: "Sans code complexe",
    paragraph:
      "Pas besoin d'être un expert du développement pour créer des applications surpuissantes. Avec WeeMake, c'est un jeu d'enfant.",
  },
  {
    number: 3,
    title: "Simplifiez vos saisies",
    paragraph:
      "Réduisez le temps de formation avec nos outils intuitifs et simplifiez l'entrée de données.",
  },
  {
    number: 4,
    title: "Traçabilité optimale",
    paragraph:
      "Ne perdez plus jamais un instant à chercher une information grâce à nos systèmes de traçabilité innovants.",
  },
  {
    number: 5,
    title: "Centraliser vos processus",
    paragraph:
      "Partagez, collaborez et innovez avec votre équipe, le tout dans une seule plateforme.",
  },
  {
    number: 6,
    title: "Adaptable à vos besoins",
    paragraph:
      "Que vous ayez besoin de simplifier la gestion de vos documents ou d'automatiser vos processus, notre solution s'adapte à votre façon de travailler.",
  },
  {
    number: 7,
    title: "Intégrations puissantes",
    paragraph:
      "Connectez-vous aux outils que vous utilisez déjà pour une synergie parfaite avec notre plateforme.",
  },
  {
    number: 8,
    title: "Une équipe à votre écoute",
    paragraph:
      "Exploitez le plein potentiel de WeeMake avec le soutien de nos experts toujours prêts à vous aider.",
  },
];
---

<section class="flex flex-col space-y-12 bg-gradient-linear-3 mt-32 px-12">
  <p
  class="text-4xl text-center text-white -mt-8 mx-40 p-6 bg-gradient-linear-2 rounded-2xl uppercase"
>
  comment ca marche ?
</p>
  <p class="text-center text-black text-4xl">
    Simplifiez la saisie et l'organisation collaboratives de vos données
  </p>
  <div class="flex flex-col items-center text-center">
    <div class="container absolute flex justify-center ">
      <svg
      class="text-9xl"
        id="my-svg"
        width="200"
        height="1650"
        id="mySvg"
        viewBox="0 0 217 1772"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          id="myPath"
          d="M61.3789 67.9404C65.9943 120.44 73.5312 136.349 164.915 165.349C220.961 183.134 217.671 83.7568 164.925 116.757C127.852 139.951 78.8743 332 44.0647 332C0.552731 332 2.8387 280 43.9987 280C108.673 280 93.7613 568.111 164.915 573.5C215.367 577.321 215.667 516.997 164.915 532C110.225 548.167 98.3257 785.5 41.884 785.5C0.724031 785.5 8.56588 726.263 41.884 733C91.8577 743.105 117.915 999.09 164.955 1006.5C211.995 1013.91 211.216 944.715 171.82 956C110.117 973.675 101.854 1221.01 41.884 1236.5C4.60015 1246.13 -2.31386 1182.5 41.884 1182.5C103.618 1182.5 106.737 1469.51 164.955 1485C210.225 1497.05 207.612 1414.58 164.955 1426.5C92.6251 1446.71 84.6201 1680.48 25.82 1704.06"
          stroke="url(#paint0_linear_113_981)"
          stroke-width="20"
          stroke-linecap="round"></path>
        <defs>
          <linearGradient
            id="paint0_linear_113_981"
            x1="107.337"
            y1="146.891"
            x2="107.337"
            y2="1840.42"
            gradientUnits="userSpaceOnUse"
          >
            <stop stop-color="#8D5BFF"></stop>
            <stop offset="0.325" stop-color="#688CE8"></stop>
            <stop offset="0.625" stop-color="#42C7C8"></stop>
            <stop offset="0.99" stop-color="#72B2C0"></stop>
          </linearGradient>
        </defs>
      </svg>
      
    </div>

    {
      processSteps.map((step, index) => (
        <div
          class={`flex w-full ${index % 2 === 0 ? "justify-end" : "justify-start"} my-4`}
        >
          <div class="bg-white p-4 rounded-lg shadow-md max-w-xl">
            <span class="font-bold text-4xl">{step.number}</span>
            <h3 class="text-3xl font-semibold mt-2">{step.title}</h3>
            <p class="text-xl">{step.paragraph}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  path.animate {
    stroke-dasharray: 15;
    animation: move 35s linear infinite;
  }

  @keyframes move {
    to {
      stroke-dashoffset: 1000;
    }
  }

  @media (max-width: 1300px) {
    #my-svg {
      display: none;
    }
  }
  @media (max-width: 639px) {
    p {
      margin-left: auto;
      margin-right: auto;
      min-width: 240px;
    }
  }

</style>


